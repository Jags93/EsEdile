@model IEnumerable<EsEdile.Models.Pagamenti>

@{
    ViewBag.Title = "GetPagamenti";
}

<h2>GetPagamenti</h2>

<p>
    @Html.ActionLink("Create New", "CreatePagamenti")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPagamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PeriodoDiPagamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ammontare)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdPagamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PeriodoDiPagamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ammontare)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdPagamento }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdPagamento }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdPagamento })
        </td>
    </tr>
}

</table>
